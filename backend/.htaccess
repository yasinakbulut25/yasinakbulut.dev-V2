RewriteEngine on

# HTTPS Redirect
#RewriteCond %{SERVER_PORT} 80
#RewriteRule ^.*$ https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]
# HTTPS Redirect

RewriteRule ^([0-9a-zA-Z-_]+)$ index.php?page=$1 [QSA,L]
RewriteRule ^([0-9a-zA-Z-_]+)/([0-9a-zA-Z-_]+)$  index.php?page=$1&request=$2 [L,QSA]
RewriteRule ^([0-9a-zA-Z-_]+)/([0-9a-zA-Z-_]+)/([0-9a-zA-Z-_]+)$  index.php?page=$1&request=$2&content=$3 [L,QSA]

# Handle Front Controller...
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php [L]
